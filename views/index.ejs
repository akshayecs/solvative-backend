<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search Places</title>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <div id="spinner" class="spinner"></div>
    <div class="container">
        <div class="search-container">
            <input type="text" id="searchInput" placeholder="Search..." autocomplete="off">
        </div>
        <div class="table-container">
            <table id="dataTable">
                <!-- Table header will be dynamically generated -->
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Place Name</th>
                        <th>Country</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Table data will be dynamically generated -->
                    <% if (data && data.length> 0) { %>
                        <% data.forEach((item, index)=> { %>
                            <tr>
                                <td>
                                    <%= index + 1 %>
                                </td>
                                <td>
                                    <%= item.name %>
                                </td>
                                <td><img src="https://www.countryflags.io/<%= item.countryCode %>/flat/64.png"
                                        alt="<%= item.country %>"></td>
                            </tr>
                            <% }); %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="3">
                                            <%= message %>
                                        </td>
                                    </tr>
                                    <% } %>
                </tbody>
            </table>
        </div>
        <div class="pagination-container">
            <% if (paginationVisible) { %>
                <button id="prevPage">Previous</button>
                <button id="nextPage">Next</button>
                <% } %>
        </div>
        <div class="limit-container">
            <label for="limitInput">Limit:</label>
            <input type="number" id="limitInput" min="1" max="10" value="5">
        </div>
    </div>

    <script>
        function fetchDataWithQueryAndLimit() {
            const query = document.getElementById('searchInput').value.trim();
            const limit = document.getElementById('limitInput').value.trim();

            // Make an AJAX request to the server-side endpoint with both query and limit
            fetch(`/search?q=${query}&limit=${limit}`)
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Network response was not ok');
                    }
                    return response.text(); // Read response as text
                })
                .then(htmlContent => {
                    // Update the table container with the received HTML content
                    const tableContainer = document.querySelector('.table-container');
                    tableContainer.innerHTML = htmlContent;
                })
                .catch(error => {
                    // Handle errors
                    console.error('Error:', error);
                });
        }

        // Event listener for input change in the search box
        document.getElementById('searchInput').addEventListener('input', fetchDataWithQueryAndLimit);

        // Event listener for pressing Enter key in the search box
        document.getElementById('searchInput').addEventListener('keypress', function (event) {
            if (event.key === 'Enter') {
                fetchDataWithQueryAndLimit();
            }
        });

        // Event listener for input change in the limit input field
        document.getElementById('limitInput').addEventListener('input', fetchDataWithQueryAndLimit);

    </script>

</body>

</html>