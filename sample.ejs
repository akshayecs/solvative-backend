<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search Places</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div id="spinner" class="spinner"></div>
    <div class="container">
        <div class="search-container">
            <input type="text" id="searchInput" placeholder="Search..." autocomplete="off">
        </div>
        <div class="table-container">
            <table id="dataTable">
                <!-- Table header will be dynamically generated -->
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Place Name</th>
                        <th>Country</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Table data will be dynamically generated -->
                    <% data.forEach((item, index) => { %>
                        <tr>
                            <td><%= index + 1 %></td>
                            <td><%= item.name %></td>
                            <td><img src="https://www.countryflags.io/<%= item.countryCode %>/flat/64.png" alt="<%= item.country %>"></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
        <div class="pagination-container">
            <!-- Pagination buttons will be dynamically generated -->
            <% if (paginationVisible) { %>
                <button id="prevPage">Previous</button>
                <button id="nextPage">Next</button>
            <% } %>
        </div>
        <div class="limit-container">
            <label for="limitInput">Limit:</label>
            <input type="number" id="limitInput" min="1" max="10" value="5">
        </div>
    </div>

    <script src="../public/JS/script.js"></script>
</body>
</html>
